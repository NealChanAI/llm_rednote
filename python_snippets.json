{
    "Python File Header": {
        "prefix": "pyheader",
        "body": [
            "# -*- coding: utf-8 -*-",
            "# ===============================================================",
            "#",
            "#    @Create Author : ${1:your_name}",
            "#    @Create Time   : ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}",
            "#    @Description   : ${2:description}",
            "#",
            "# ===============================================================",
            "",
            "$0"
        ],
        "description": "Python 文件头注释模板"
    },
    "Python Class Template": {
        "prefix": "pyclass",
        "body": [
            "class ${1:ClassName}:",
            "    \"\"\"",
            "    ${2:类描述}",
            "    \"\"\"",
            "    ",
            "    def __init__(self):",
            "        \"\"\"初始化方法\"\"\"",
            "        $0",
            "        ",
            "    def ${3:method_name}(self):",
            "        \"\"\"",
            "        ${4:方法描述}",
            "        \"\"\"",
            "        pass"
        ],
        "description": "Python 类模板"
    },
    "Python Function Template": {
        "prefix": "pyfunc",
        "body": [
            "def ${1:function_name}(${2:parameters}):",
            "    \"\"\"",
            "    ${3:函数描述}",
            "    ",
            "    Args:",
            "        ${2:parameters}: ${4:参数描述}",
            "    ",
            "    Returns:",
            "        ${5:返回值描述}",
            "    \"\"\"",
            "    $0",
            "    pass"
        ],
        "description": "Python 函数模板"
    }
}
